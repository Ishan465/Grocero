<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Grocero.Views"
       x:Class="Grocero.AppShell">

    <ShellContent Title="Login" ContentTemplate="{DataTemplate views:MainPage}" Route="Login" />
    <ShellContent Title="Welcome" ContentTemplate="{DataTemplate views:WelcomePage}" Route="Welcome" />
    <ShellContent Title="Register" ContentTemplate="{DataTemplate views:RegisterPage}" Route="Register" />
</Shell>
